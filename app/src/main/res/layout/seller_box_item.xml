<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#EAE7E7"
    android:id="@+id/Slview"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="18dp"
        app:cardElevation="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"

            android:layout_height="match_parent">
            <!-- Product Image -->
            <!--            <ImageView-->
            <!--                android:layout_width="100dp"-->
            <!--                android:layout_height="100dp"-->
            <!--                android:layout_gravity="center"-->
            <!--                android:scaleType="centerCrop"-->
            <!--                android:src="@drawable/image2" />-->

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Brand -->
                    <TextView
                        android:id="@+id/S_Brand_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="10dp"
                        android:text="Brand: Brand Name"
                        android:textColor="#000000"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <!-- Product Name -->

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginBottom="10dp"
                        android:textSize="15sp"
                        android:id="@+id/S_product_name"
                        android:text="Product Name"
                        android:textColor="#000000" />




                    <!-- Quantity -->


                    <TextView
                        android:id="@+id/S_product_quantity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="10dp"
                        android:text="Quantity"
                        android:textColor="#875353"
                        android:textSize="15sp" />
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <!-- Price -->
                        <TextView
                            android:id="@+id/S_product_price"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="30dp"
                            android:layout_marginBottom="10dp"
                            android:text="Price"
                            android:textColor="#FF5722"
                            android:textSize="20sp" />
<!--                        <Button-->
<!--                            android:layout_width="wrap_content"-->
<!--                            android:layout_height="wrap_content"-->
<!--                            android:id="@+id/S_edit_button"-->
<!--                            android:layout_alignParentRight="true"-->
<!--                            android:backgroundTint="@color/white"-->
<!--                            android:drawableLeft="@drawable/edit_btn"-->
<!--                            android:textColor="#FF0000" />-->
                    </RelativeLayout>
                </LinearLayout>

                <!-- Delete Button -->
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/S_delete_button"
                    android:layout_alignParentRight="true"
                    android:backgroundTint="@color/white"
                    android:drawableLeft="@drawable/delete"
                    android:textColor="#FF0000" />


            </RelativeLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>

